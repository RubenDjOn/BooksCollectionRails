<button class="button_ok" data-toggle="modal" href='#modal-id'>Add Book</button>
<div class="modal fade" id="modal-id">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title">Book Administration</h4>
			</div>
			<div class="modal-body">

				<%= simple_form_for(book, html: { class: "form" }) do |f| %>

				<%= f.input :title , placeholder: 'Book Title' %>
				<%= f.input :description , placeholder: 'Book Description' %>
				<%= f.input :pages , placeholder: 'Pages Number' %>

			</div>

			<div class="modal-footer">
				
				<div class="actions">
					<%= f.submit class: "button_ok" %>
				</div>

				<% end %>
			</div>
		</div>
	</div>
</div>