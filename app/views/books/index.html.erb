<div class="container">
	<h1><%= @title || "Book List" %></h1>
	<%= new_book_modal %>
	<!-- <%= link_to 'Add Book', new_book_path  %> -->
	<hr>
	<% if flash[:notice] %>
	<div class="alert alert-success" role="alert" id="notice"><%= flash[:notice] %></div>
	<% end %>

	<div class="list-group">
		<ul>
			<% @books.each do |book| %>
			<li class="list-group-item"><h4><%= book.title %></h4></li>
			<li class="list-group-item"><%= book.description %></li>
			<li class="list-group-item">
				Pages: <%= book.pages %>
				<div class="pull-right">
					<%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' } %>
					<%= link_to "Edit", edit_book_path(book)  %> 
				</div>
			</li>
			
			<% end %>
		</ul>
	</div>
</div>

